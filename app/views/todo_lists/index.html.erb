<section id="todo_lists">
  <% @todo_lists.each do |todo_list| %>
    <article>
      <header>
        <h1><%= link_to todo_list.title, todo_list %></h1>
      </header>
      <p>Things you need to do:</p>
      <%=  render partial: "todo_items/list", locals: {todo_items: todo_list.todo_items} %>
      <footer>
        <%= link_to 'Edit', edit_todo_list_path(todo_list) %>
        <%= link_to 'Destroy', todo_list, confirm: 'Really?!? Just going to quit like that?', method: :delete %>
      </footer>
    </article>
  <% end %>

</section>